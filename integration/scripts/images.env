# Container Images Configuration
# This file contains all the container images used in the integration setup

# SPIRE Images
SPIRE_SERVER_IMAGE="ghcr.io/spiffe/spire-server:1.11.0"
SPIRE_AGENT_IMAGE="ghcr.io/spiffe/spire-agent:1.11.2"
SPIRE_CONTROLLER_MANAGER_IMAGE="ghcr.io/spiffe/spire-controller-manager:0.6.0"
SPIFFE_CSI_DRIVER_IMAGE="ghcr.io/spiffe/spiffe-csi-driver:0.2.6"
SPIFFE_HELPER_IMAGE="ghcr.io/spiffe/spiffe-helper:0.9.0"

# CSI Images
SECRETS_STORE_CSI_DRIVER_IMAGE="registry.k8s.io/csi-secrets-store/driver:v1.4.8"
CSI_NODE_DRIVER_REGISTRAR_IMAGE="registry.k8s.io/sig-storage/csi-node-driver-registrar:v2.11.1"
CSI_NODE_DRIVER_REGISTRAR_LEGACY_IMAGE="registry.k8s.io/sig-storage/csi-node-driver-registrar:v2.6.0"
CSI_LIVENESS_PROBE_IMAGE="registry.k8s.io/sig-storage/livenessprobe:v2.13.1"
SPIRE_CSI_PROVIDER_IMAGE="secrets-store-csi-provider-spire:v0.0.4"

# Utility Images
ENVSUBST_IMAGE="bhgedigital/envsubst:latest"
OPENSSL_IMAGE="alpine/openssl:latest"
ALPINE_IMAGE="alpine:3.19"
NGINX_IMAGE="nginx:alpine"

# All Images List (for batch operations)
ALL_IMAGES=(
    "$SPIRE_SERVER_IMAGE"
    "$SPIRE_AGENT_IMAGE" 
    "$SPIRE_CONTROLLER_MANAGER_IMAGE"
    "$SPIFFE_CSI_DRIVER_IMAGE"
    "$SPIFFE_HELPER_IMAGE"
    "$SECRETS_STORE_CSI_DRIVER_IMAGE"
    "$CSI_NODE_DRIVER_REGISTRAR_IMAGE"
    "$CSI_NODE_DRIVER_REGISTRAR_LEGACY_IMAGE"
    "$CSI_LIVENESS_PROBE_IMAGE"
    "$SPIRE_CSI_PROVIDER_IMAGE"
    "$ENVSUBST_IMAGE"
    "$OPENSSL_IMAGE"
    "$ALPINE_IMAGE"
    "$NGINX_IMAGE"
)
